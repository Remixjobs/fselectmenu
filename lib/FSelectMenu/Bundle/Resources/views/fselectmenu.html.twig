
{% use "form_div_layout.html.twig" with choice_widget as orig_choice_widget %}

{% block fselectmenu_choice_widget %}
{% spaceless %}

    {% if empty_value is not none %}
        {% set choices = {"": empty_value} + choices %}
    {% endif %}

    {{ fselectmenu(form.get('value'), choices, {
        'attrs': attr|merge({
            'id': id~'_html'
        }),
        'nativeAttrs': attr|merge({
            'id': id,
            'name': name_full
        })
    }) }}
{% endspaceless %}
{% endblock fselectmenu_choice_widget %}

